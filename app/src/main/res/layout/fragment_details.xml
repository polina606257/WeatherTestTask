<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/day_weather_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        app:cardCornerRadius="15dp">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:orientation="horizontal"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                style="@style/WeatherParametersStyle"
                android:text="@string/date" />

            <TextView
                android:id="@+id/date_value"
                style="@style/WeatherParametersValueStyle" />

            <TextView
                style="@style/WeatherParametersStyle"
                android:text="@string/clouds" />

            <TextView
                android:id="@+id/clouds_value"
                style="@style/WeatherParametersValueStyle" />

            <TextView
                style="@style/WeatherParametersStyle"
                android:text="@string/humidity" />

            <TextView
                android:id="@+id/humidity_value"
                style="@style/WeatherParametersValueStyle" />

            <TextView
                style="@style/WeatherParametersStyle"
                android:text="@string/pressure" />

            <TextView
                android:id="@+id/pressure_value"
                style="@style/WeatherParametersValueStyle" />

            <TextView
                style="@style/WeatherParametersStyle"
                android:text="@string/min_temperature" />

            <TextView
                android:id="@+id/min_temperature_value"
                style="@style/WeatherParametersValueStyle" />

            <TextView
                style="@style/WeatherParametersStyle"
                android:text="@string/max_temperature" />

            <TextView
                android:id="@+id/max_temperature_value"
                style="@style/WeatherParametersValueStyle" />

            <TextView
                style="@style/WeatherParametersStyle"
                android:text="@string/wind" />

            <TextView
                android:id="@+id/wind_value"
                style="@style/WeatherParametersValueStyle" />

            <TextView
                style="@style/WeatherParametersStyle"
                android:text="@string/feelslike" />

            <TextView
                android:id="@+id/feelsLike"
                style="@style/WeatherParametersValueStyle" />

            <TextView
                style="@style/WeatherParametersStyle"
                android:text="@string/pop" />

            <TextView
                android:id="@+id/pop_value"
                style="@style/WeatherParametersValueStyle" />

            <TextView
                style="@style/WeatherParametersStyle"
                android:text="@string/sys" />

            <TextView
                android:id="@+id/sys_value"
                style="@style/WeatherParametersValueStyle" />
        </GridLayout>

    </androidx.cardview.widget.CardView>
</layout>